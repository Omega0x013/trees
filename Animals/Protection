class Protection
    {
        bool protection_ = false;
        Random randint = new Random();
        int chance = randint.Next(0, 1);
        if (chance ==1) then;
            protection_ = true
            else
            protection_ = false;
           endif;
            while protection_ = false
            tree.damaged = true
            end
            // this protects the tree using a random number
    }
class deerTrampling
        {
        if tree.protection = false;
            tree.damaged = true
            else
            Trees.damaged = false
            // if a tree does not have protection, the deer destroy it instantly
            // therefore if a tree is planted it has a 50/50 chance of staying alive
            // change tree colour to damaged
        }
